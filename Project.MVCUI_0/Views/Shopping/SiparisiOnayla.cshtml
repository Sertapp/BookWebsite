@model OrderVM
@{
    ViewBag.Title = "SiparisiOnayla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SiparisiOnayla</h2>

<div>
    @using (Html.BeginForm("SiparisiOnayla", "Shopping", FormMethod.Post, new { @class = "form-horizontal tasi-form" }))
    {
        <div class="form-group">
            <label class="col-sm-2">Gönderim Adresi</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.Order.ShippedAddress, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Kart Numarası</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.PaymentDTO.CardNumber, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Kart Güvenlik Numarası</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.PaymentDTO.SecurityNumber, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Kullanım Tarihi (Yıl)</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.PaymentDTO.CardExpiryYear, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Kullanım Tarihi (Ay)</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.PaymentDTO.CardExpiryMonth, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Kart üzerindeki Ad ve Soyad</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.PaymentDTO.CardUserName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Email</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.Order.Email, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Onaylama</label>
            <div class="col-sm-10">
               <button class="btn btn-primary">Onay</button>
            </div>
        </div>
    }
</div>