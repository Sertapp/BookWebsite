@model AppUserVM
@{
    ViewBag.Title = "ProfilePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper">
    <!-- page start-->
    <div class="row">
        <aside class="profile-nav col-lg-3">
            <section class="panel">
                <div class="user-heading round">
                    <a href="#">
                        <img src="~/Pictures/blank-profile-picture-973460_640.png" />
                    </a>
                    <h1>@Model.AppUser.UserName</h1>
                    <p>@Model.AppUser.Email</p>
                </div>

                <ul class="nav nav-pills nav-stacked">
                    <li class="active"><a href="@Url.Action("ProfilePage","Profile")"> <i class="icon-user"></i> Profil</a></li>
                    <li><a href="@Url.Action("Orders","Order",new {id=Model.AppUser.ID })"> <i class="icon-edit"></i> Sipariş</a></li>

                    <li><a href="@Url.Action("ProfileEdit",new {id=Model.AppUser.ID })"> <i class="icon-edit"></i> Profil Bilgilerinizi Güncelleyiniz</a></li>

                </ul>

            </section>
        </aside>
        <aside class="profile-info col-lg-9">

            <section class="panel">
                <div class="bio-graph-heading">
                    Teşekkürler...İyi günler dileriz.
                </div>
                <div class="panel-body bio-graph-info"/>
                    <h1>Bilgilerim</h1>
                    <div class="row"/>
                        <div class="bio-row">
                            <p><span>First Name </span>: @Model.AppUser.Profile.FirstName</p>
                        </div>
                        <div class="bio-row">
                            <p><span>Last Name </span>: @Model.AppUser.Profile.LastName</p>
                        </div>
                        <div class="bio-row">
                            <p><span>Address </span>: @Model.AppUser.Profile.Address</p>
                        </div>
                        <div class="bio-row">
                            <p><span>Email </span>: @Model.AppUser.Email</p>
                        
                </div>
            </section>

        </aside>
    </div>

    <!-- page end-->
</section>


