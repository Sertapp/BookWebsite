@model ProductVM
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Ürün eklemek icin @Html.ActionLink("tıklayınız","AddProduct")</h3>


<div class="panel-body">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
                <tr>
                    <th>Ürün Adı</th>
                    <th>Ürün Fiyatı</th>
                    <th>Ürün Stok</th>
                    <th>Ürün Kategorisi</th>
                    <th>Ürün Resmi</th>
                    <th class="hidden-phone">Durum</th>
                    <th class="hidden-phone">Siliniz</th>
                    <th class="hidden-phone">Guncelleyiniz</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product item in Model.Products)
                {
                    <tr class="gradeX">
                               <td>@item.ProductName</td>             
                        <td>@item.UnitPrice </td>
                        <td class="hidden-phone">@item.UnitsInStock</td>
          
                        @if (item.Category ==null)
                        {
                            <td>Kategorisi belirtilmemistir.</td>
                        }
                        else
                        {
                            <td>@item.Category.CategoryName</td>
                        }
                        <td><img width="30" height="30" title="@item.ProductName" src="@item.ImagePath" /></td>
                        <td class="center hidden-phone">@item.Status</td>
                        <td class="center hidden-phone">@Html.ActionLink("Siliniz", "DeleteProduct", new { id = item.ID }, new { @class = "btn btn-danger" })</td>
                        <td class="center hidden-phone">@Html.ActionLink("Güncelleyiniz", "UpdateProduct", new { id = item.ID }, new { @class = " btn btn-warning" })</td>
                    </tr>
                }


            </tbody>
        </table>

    </div>
</div>




<script src="~/Areas/Admin/AdminContent/ProductDTJ.js"></script>